{
  "name": "sankyutech/stinvoice-adapter",
  "description": "ST Invoice SDKfor PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Sankyu Tech Sdn Bhd",
      "email": "technical.support@sankyutech.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sankyu\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sankyu\\Tests\\": "tests"
    }
  },
  "require": {
    "php": "^7.4 || ^8.0 || ^8.3",
    "php-http/multipart-stream-builder": "^1.0",
    "guzzlehttp/guzzle": "^6.5|^7.0.1",
    "php-http/guzzle7-adapter": "^0.1.1"
  },
  "require-dev": {
    "codexpertmy/tests": "^1.0",
    "mockery/mockery": "^1.3",
    "phpstan/phpstan": "^1.3",
    "phpunit/phpunit": "^7.5 || ^8.4 || ^9.0"
  },
  "suggest": {},
  "scripts": {
    "test": [
      "vendor/bin/phpunit -c ./"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse src tests"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "extra": {},
  "prefer-stable": true,
  "minimum-stability": "dev"
}